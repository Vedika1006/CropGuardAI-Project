{
  "expo": {
    "name": "CropGuard AI",
    "slug": "cropguard-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1e6b3d"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cropguard.ai"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#1e6b3d"
      },
      "package": "com.cropguard.ai",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to detect crop diseases."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "The app accesses your camera to capture crop photos for disease detection."
        }
      ]
    ]
  }
}
